---
import '../styles/style.scss';

import { ViewTransitions } from 'astro:transitions';

import BaseLayoutBodyLg from './BaseLayoutBodyLg.astro';
import BaseLayoutBodySm from './BaseLayoutBodySm.astro';

import GithubCorner from '@/components/GithubCorner.astro';
import NotificationBox from '@/components/NotificationBox.astro';

const { lang = 'da', title, frontmatter } = Astro.props;

const pageTitle =
  (title !== undefined
    ? `${title} | `
    : frontmatter.title !== undefined
      ? `${frontmatter.title} | `
      : '') + 'Alexander Sandholdt';
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      {pageTitle}
    </title>
    <meta
      name="description"
      content="Alexander Sandholdts personlige hjemmeside - læs kort om mig, udforsk mine projekter/mit arbejde, besøg mine tanker & idéer og/eller forbind med mig på diverse medier."
    />

    <!-- Favicon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#ffffff" />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <div class="body-lg"><BaseLayoutBodyLg><slot /></BaseLayoutBodyLg></div>
    <div class="body-sm"><BaseLayoutBodySm><slot /></BaseLayoutBodySm></div>

    <GithubCorner />
    <NotificationBox />

    <style lang="scss" is:global>
      @use '../styles/abstracts/' as *;

      main {
        padding-block: $site-top-gap $site-bottom-gap;

        .slot-wrapper {
          max-width: 90ch;
        }
      }

      .body-sm {
        display: none;
      }

      @media only screen and (max-width: $breakpoint-sm) {
        .body-lg {
          display: none;
        }

        .body-sm {
          display: initial;
        }
      }
    </style>
  </body>
</html>
