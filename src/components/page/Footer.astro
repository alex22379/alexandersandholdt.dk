---
import { Image } from 'astro:assets';
import signatureImg from '@assets/signature.png';

import { Icon } from 'astro-icon/components';
---

<footer>
  <div class="github">
    <a
      class="fs-200"
      href="https://github.com/alex22379/alexandersandholdt.dk"
      target="_blank"
      ><Icon name="mdi:external-link" />Find p√• GitHub
    </a>
    <div class="signature">
      <Image src={signatureImg} alt="" />
    </div>
  </div>

  <style lang="scss">
    footer {
      display: grid;
      place-items: center;

      .github {
        a {
          display: flex;
          justify-content: center;
          align-items: center;
          gap: 0.1rem;
        }
      }

      .signature {
        img {
          max-width: 10rem;
          height: auto;
        }
      }
    }
  </style>
</footer>
