---
import { Image } from 'astro:assets';
import signatureImg from '@assets/signature.png';
---

<footer>
  <div class="signature">
    <Image src={signatureImg} alt="" />
  </div>
</footer>

<style lang="scss">
  footer {
    display: grid;
    place-items: center;

    .signature {
      img {
        max-width: 10rem;
        height: auto;
      }
    }
  }
</style>
